Sagt am Meisten, wenn $p-1 = 2^k, k > 0$. Dann $ord(\overline a) \mid 2^k, ord(\overline a) \nmid 2^{k-1} \Rightarrow ord(\overline a) = p-1 = 2^k \Rightarrow \overline a$ ist primitiv.

Falls $2^k + 1 = p \in \MdP$, so ist $a$ Primitivwurzel $\Leftrightarrow (\frac{a}{p}) = -1 (p \in \MdP \Rightarrow k = 2^n, n \in \MdN_+, p = F_n = 2^{2^n}+1$ n-te Fermatzahl (1. Übungsblatt).

Falls das so ist, so ist $3$ eine Primitivwurzel $\mod p$.\\
Berechne $(\frac{3}{p})$. $p = 2^k + 1 \equiv 1 \mod 4 (k \ge 2) \Rightarrow (-1)^{\frac{p-1}{2}} = 1 \Rightarrow (\frac{3}{p})(\frac{p}{3}) = (-1)^{\frac{2}{2} \cdot \frac{p-1}{2}} = 1 \Rightarrow (\frac{3}{p}) = (\frac{p}{3})$ (quadratisches Reziprozitätsgesetz!)\\
Berechne $p \mod 3$. $p = F_n = 2^{2^n}+1, n \ge 1$. (Folgende Äquivalenz stimmt wohl nicht ganz, bitte überprüft das jemand) $2 \equiv -1 \mod 3, p \equiv (-1)^{2^n} + 1 \equiv 1 + 1 \equiv -1 \mod 3 \Rightarrow (\frac{3}{p}) = (\frac{p}{3}) = (\frac{-1}{3})$

\begin{satz}[Fermat-Zahl-Satz]
	\begin{itemize}
		\item[(i)] Sei $k \in \MdN_+, p = 2^k + 1$. Dann gilt $p \in \MdP \Rightarrow k = 2^n (n \in \MdN) \Rightarrow p = F_n = 2^{2^n} + 1$
		\item[(ii)] Ist $p = F_n \in \MdP, a \in \MdZ, p \nmid a, n \ge 1$, so gilt: $a$ Primitivwurzel $\mod a \Leftrightarrow (\frac{a}{p}) = -1$. Trifft zu auf $a = 3$
		\item[(iii)] Pepins-Test: Sei $n \in \MdN_+$. Dann gilt: $F_n = 2^{2^n} + 1 \in \MdP \Leftrightarrow 3^{2^{(2^n - 1)}} \equiv -1 \mod F_n$
	\end{itemize}
\end{satz}

\begin{beweis}
	\begin{itemize}
		\item[(i)] $\surd$
		\item[(ii)] $\surd$
		\item[(iii)] \underline{"`$\Rightarrow$"':} $F_n = p \in \MdP \Rightarrow 3$ Primitivwurzel $\mod p$, $ord(\overline 3) \mid p-1 = 2^{2^n} \Rightarrow \overline 3^{2^{2^n-1}} = \overline 3^{\frac{2^{2^n}}{2}} = \pm 1$. Bei $+1$ keine Primitivwurzel.\\
			\underline{"`$\Leftarrow$"':} Sei $p \in \MdP, p \mid F_n = 2^{2^n} + 1$. $3^{2^{2^n-1}} \equiv -1 \mod F_n \Rightarrow 3^{2^{2^n-1}} \equiv -1 \mod p, 3^{2^{2^n}} \equiv 1 \mod F_n \Rightarrow 3^{2^{2^n}} \equiv 1 \mod p$. $F_n -1 = ord(\overline 3) = 2^{2^n} \le p-1 (ord(\overline 3) $ in $\MdF_p$ teilt $\#\MdF_p^\times = p-1)$
	\end{itemize}
\end{beweis}

\subsection{JACOBI-Symbol}
\begin{definition}
	Sei $a \in \MdZ, m \in \MdN_+, 2 \nmid n, \ggt(a,m) = 1 (\star)$. Definiere das Jacobi-Symbol $(\frac{a}{m})$ durch:\[(\frac{a}{m}) = \prod_{p\in \MdP, p \nmid m}(\frac{a}{p}^{v_p(m)})\]
	Falls ($\star$) verletzt ist, ist $(\frac{a}{m})$ nicht definiert.\\
	Klar: 
	\begin{itemize}
		\item[] $(\frac{a}{1}) = (\frac{1}{m}) = 1$
		\item[] $m \in \MdP, m > 2$, so ist Jacobi $(\frac{a}{m}) = $ Legendre $(\frac{a}{m})$
	\end{itemize}
\end{definition}

\begin{satz}[Jacobi-Symbolsatz]
	Falls $a, a' \in \MdZ, m, m' \in \MdZ$, so gelten, falls die vorhandenen Jacobi-Symbole definiert sind:
	\begin{itemize}
		\item[(i)] $a \equiv b \mod m \Rightarrow (\frac{a}{m}) = (\frac{b}{m})$
		\item[(ii)] $(\frac{aa'}{m}) = (\frac{a}{m})(\frac{a'}{m}), (\frac{a}{mm'}) = (\frac{a}{m})(\frac{a}{m'})$
		\item[(iii)] $(\frac{a}{m})(\frac{m}{a}) = (-1)^{\frac{a-1}{2} \cdot \frac{m-1}{2}}$ (Reziprozitätsgesetz)
		\item[(iv)] $(\frac{-1}{m}) = (-1)^{\frac{m-1}{2}}, (\frac{2}{m}) = (-1)^{\frac{m-1}{8}}$ (Ergänzungssätze)
	\end{itemize}
\end{satz}

\underline{Algorithmus-Skizze zur Berechnung von $(\frac{a}{m})$}
\begin{itemize}
	\item[0.] $m = 1: (\frac{a}{m}) = (\frac{a}{1}) = 1$
	\item[1.] $m > 1, 2 \nmid m, (\frac{a}{m}) = (\frac{r}{m})$ mit $r = a$ mods $m$ (also $|r| < \frac{m}{2}$)
	\item[2.] Stelle $r$ dar als $r = sign(r)2^{v_2(r)}r_0$ (also $r_0 > 0, 2 \nmid r_0, |r| < \frac{m}{2}$)\\
		Rechenaufwand minimal!\\
		$(\frac{r}{m}) = \underbrace{(\frac{sign(r)}{m})(\frac{2}{m})^{v_2(r)}}_{=: \Upsilon}(\frac{r_0}{m})$\\
		Rechenaufwand für $\Upsilon$ ist ebenfalls minimal.
	\item[3.] $(\frac{r_0}{m}) = (\frac{m}{r_0})(-1)^{\frac{r_0 - 1}{2} \cdot \frac{m-1}{2}}$, wende Verfahren auf $(\frac{m}{r_0}$ an. Problem reduziert von $m$ auf $r_0$ mit $0 < r_0 < \frac{m}{2}$. Schleife wird ca. $\log_2 m$ mal durchlaufen.\\
		\textbf{!} Primzerlegung nirgends vor \textbf{!} 
\end{itemize}

\begin{beweis}[Jacobi-Symbol]
	Vorbemerkung: Aus $(\frac{a}{m}) = 1$ folgt \underline{nicht}, dass $a$ quadratischer Rest $\mod m$ ist.\\
	\begin{beispiel}
		$(\frac{2}{15}) = (\frac{2}{3})(\frac{2}{5}) = (-1)(-1) = 1$. $2$ ist quadratischer Nichtrest $\mod 3$ und erstrecht quadratischer Nichtrest von $\mod 15$
	\end{beispiel}
	\begin{itemize}
		\item[(i)] $p \mid m, p \in \MdP, a \equiv b \mod m \Rightarrow a \equiv b \mod p \Rightarrow (\frac{a}{p}) = (\frac{b}{p}) \Rightarrow (\frac{a}{m}) = (\frac{b}{m})$
		\item[(ii)] $(\frac{a}{p})(\frac{b}{p}) = (\frac{ab}{p})$ (Legendre Symbol) $\Rightarrow (\frac{a}{m})(\frac{b}{m}) = (\frac{ab}{m})$\\
			$(\frac{a}{mm'}) = \prod_{p \in \MdP}(\frac{a}{p})^{v_p(mm')} = \prod_{p \in \MdP}(\frac{a}{p})^{v_p(m) + v_p(m')} = \prod_{p \in \MdP}((\frac{a}{p})^{v_p(m)}(\frac{a}{p})^{v_p(m')}) = \prod_{p \in \MdP}(\frac{a}{p})^{v_p(m)} \cdot \prod_{p \in \MdP}(\frac{a}{b})^{v_p(m')} = (\frac{a}{m})(\frac{a}{m'})$
		\item[(iii)] $(\frac{a}{m})(\frac{m}{a}) = (-1)^{\frac{a-1}{2} \cdot \frac{m-1}{2}}$ klar für $m = 1$ oder $a = 1$. Also $m > 1, a > 1$ vorraussetzbar. $2 \nmid m, 2 \nmid a$.\\
		Falls $m \in \MdP$ und $a \in \MdP (\ggt (m, n) = 1)$, so steht das quadratische Reziprozitätsgesetz für das Legendre Symbol da.\\
		Also nur noch zu beweisen, wenn $a$ oder $m \not\in \MdP$ etwa $m = uv, 1 < v < m$.\\
		Induktion nach $a,m$:\\
		Induktionhypothese: $(\frac{a}{u})(\frac{u}{a}) = (-1)^{\frac{a - 1}{2} \cdot \frac{u - 1}{2}}$, $(\frac{a}{v})(\frac{v}{a}) = (-1)^{\frac{a - 1}{2} \cdot \frac{v - 1}{2}}$\\
		$(\frac{a}{uv})(\frac{uv}{a}) \stackrel{(ii)}{=} (\frac{a}{u})(\frac{a}{v})(\frac{u}{a})(\frac{v}{a}) \stackrel{\text{I.H.}}{=} (-1)^{\frac{a-1}{2} \cdot \frac{u - 1}{2}} (-1)^{\frac{a-1}{2} \cdot \frac{v-1}{2}} \stackrel{\text{?}}{=} (-1)^{\frac{a-1}{2} \cdot \frac{uv-1}{2}}$
	\end{itemize}
	Genügt: $n - 1 + v - 1 = uv-1 \mod 4$. Das stimmt, weil $2 \nmid u, 2 \nmid v$ und $u,v \equiv \pm 1 \mod 4$
	\item[(iv)] Ähnliche Induktion
\end{beweis}


